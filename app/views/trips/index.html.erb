<h1>Listing trips</h1>

<table>
  <tr>
    <th>Startpoint</th>
    <th>Startdate</th>
    <th>Endpoint</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.startpoint %></td>
    <td><%= trip.startdate %></td>
    <td><%= trip.endpoint %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

